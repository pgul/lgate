 $(OBJDIR)/movefile.obj \
 $(OBJDIR)/rmove.obj \
 $(OBJDIR)/scanbnk.obj

all:		$(OBJDIR) flibpe.lib

$(OBJDIR):
	mkdir $(OBJDIR)

clean:
	rm -f $(OBJS) flibpe.bak

flibpe.lib:	$(OBJS)
	emxomfar r $@ $?

%.obj:	%.c
	$(CC) $(CFLAGS) -o $@ $<

